<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([:admin, @article]) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :body %>
      <%= f.text_field :body, class: 'form-control' %>

      <%= f.label :author %>
      <%= f.text_field :author, class: 'form-control' %>

      <%= f.submit 'Submit', class: 'btn btn-primary', role: 'button' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p><%= link_to 'Back to Articles', admin_articles_path %></p>
  </div>
</div>
