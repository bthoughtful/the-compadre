<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([:admin, @article]) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: 'form-control', placeholder: 'leave blank if none' %>
      </div>

      <div class="form-group">
        <%= f.label :intro %>
        <%= f.text_field :intro, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :published_at %>
        <%= f.date_field :published_at %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, id: 'simpleMde', class: 'form-control' %>
      </div>

      <%= f.submit 'Submit', class: 'btn btn-primary', role: 'button' %>
    <% end %>

    <p><%= link_to 'Back to Articles', admin_articles_path %></p>
  </div>
</div>
