<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Previous Newsletter Articles</h1>
  </div>
</div>

<ul>
<% @articles.each do |a| %>
    <li>
      <%= link_to article_path(a.id) do %>
        <div id="article-<%= a.id %>" class="">
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <h2>"<%= a.title %>"</h2>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <span>author: <%= a.author %></span>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <span>"<%= a.created_at %>"</span>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <p>"<%= a.body %>"</p>
            </div>
          </div>
      <% end %>
    </li>
<% end %>
</ul>

<%= will_paginate %>
