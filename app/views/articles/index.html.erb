<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="articles-headline">Previous Articles</h1>

      <%= link_to root_path do %>
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        <span>Back</span>
      <% end %>
      <hr>

      <ul class="article-list">
        <% @articles.each do |a| %>
            <li>
              <%= link_to article_path(a.id) do %>
                <div id="article-<%= a.id %>" class="article-block">
                  <h2>"<%= a.title %>"</h2>
                  <p><%= a.intro %></p>
                  <span><%= parse_date(a.published_at) %></span>
                </div>
              <% end %>
            </li>
        <% end %>
      </ul>

      <div class="pagination-cntr">
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
