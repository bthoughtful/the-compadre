<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>"<%= @article.title %>"</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <span>author: <%= @article.author %></span>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <span>"<%= @article.created_at %>"</span>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <p>"<%= @article.body %>"</p>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= link_to "Back to Articles", articles_path %>
  </div>
</div>
